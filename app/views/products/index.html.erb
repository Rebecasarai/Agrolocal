

<div class="container" >
<h1 class="cented">Productos</h1>

  
<table class="table table-condensed">
  <thead>
    <tr>
      <th>Icon</th>
      <th>Name</th>
      <th>Description</th>
      <th>Ecological</th>
      <th>Price</th>
      <th>Farmer</th>
      <th>Phone</th>
      <th>City</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= image_tag(product.icon.path, width: "64") %></td>
        <td><%= product.name %></td>
        <td><%= product.description %></td>
        <td><%= product.ecological %></td>
        <td><%= number_to_currency(product.price, unit: "â‚¬", format: "%n %u") %></td>
        <td><%= product.farmer %></td>
        <td><%= product.phone %></td>
        <td><%= product.city %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

  
  <button type="button" class="btn btn-success"><%= link_to 'New Product', new_product_path %></button>

<br>
  
</div>

